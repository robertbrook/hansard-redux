          <td></td>
          <td><span class="italic">Change &#x00A3;000</span></td>
          <td><span class="italic">New DEL &#x00A3;000</span></td>
          <td><span class="italic">Of which: Voted &#x00A3;000</span></td>
          <td><span class="italic">Non-voted &#x00A3;000</span></td>
          <td><span class="italic">Change &#x00A3;000</span></td>
          <td><span class="italic">New DEL &#x00A3;000</span></td>
          <td><span class="italic">Of which Voted</span></td>
          <td><span class="italic">Non- voted &#x00A3;000</span></td>
